@model Adbeer.Areas.Admin.Dto.VehicleDto.AddVehicleWithDriver
@{
    Layout = null;
}
<form asp-controller="Vehicle" asp-action="Add" method="POST" onsubmit="return jQueryAjaxPost(this);" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="capacity">Capacity</label>
                <input type="text" class="form-control" id="fullName" asp-for="Capacity">
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6 form-group">
            <label for="driver">Driver</label>
            <select class="form-control" id="driver" asp-for="DriverId" asp-items="Model._Drivers"></select>
            <span asp-validation-for="DriverId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label for="active">Active</label>
        <input type="checkbox" id="active" checked asp-for="IsActive">
    </div>
    <div class="row">
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary btn-create">Create</button>
        </div>
        <div class="col-md-2">
            <input type="reset" class="btn" value="Rest">
        </div>
    </div>
</form>